datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Server {
  guild_id String @id
  words    Word[]

  @@map("servers")
}

model Word {
  id        String @id
  count     Int    @default(1)
  server    Server @relation(fields: [server_id], references: [guild_id])
  server_id String

  @@map("words")
}
