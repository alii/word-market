datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Server {
  guild_id String @id
  words    Word[]

  @@map("servers")
}

model Word {
  id        String   @id
  count     Int      @default(1)
  server    Server   @relation(fields: [server_id], references: [guild_id])
  server_id String
  trades    Trades[]

  @@map("words")
}

model User {
  discord_id String   @id
  balance    Float    @default(10)
  Trades     Trades[]
}

model Trades {
  id      String    @id @default(cuid())
  status  TradeType
  word    Word      @relation(fields: [word_id], references: [id])
  user    User      @relation(fields: [user_id], references: [discord_id])
  word_id String
  user_id String
  price   Float
}

enum TradeType {
  Buy
  Sell

  @@map("trade_type")
}
